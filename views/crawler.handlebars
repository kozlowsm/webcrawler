<div class="container">
	<h1>{{title}}</h1>
  <div class="row">
    <div class="col-md-4">
      <form action='/submit'>
        <div class="form-group">
          <label for="url">URL</label>
          <input class="form-control" required id='url' name = 'url' type="text" placeholder="http://yoururl.com">
        </div>
        <div class="form-group">
          <label for="keyword">Search Keyword</label>
          <input class="form-control" id='keyword' name = 'keyword' type="text" >
        </div>
        <div class="form-group">
          <label for="maxDepth">Max Depth for Search</label>
          <select class="form-control">
            <option value='1'>1</option>
            <option value='2'>2</option>
            <option value='3'>3</option>
            <option value='4'>4</option>
            <option value='5'>5</option>
          </select>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" required name="searchType" id="breadth" value="breadth">
          <label class="form-check-label" for="breadth">Breadth First Search</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="searchType" id="depth" value="depth">
          <label class="form-check-label" for="depth">Depth First Search</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-md-8">
      D3 visualization
    </div>
  </div>
</div>
